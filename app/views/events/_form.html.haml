.modal-header
  %button.close{"data-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} &times;
    %span.sr-only Close

  %h4#myModalLabel.modal-title Редагування події
= form_for @event, remote: true, format: :json, :html => { :class => 'form-horizontal' } do |f|
  .modal-body

    %ul.nav.nav-tabs{role: 'tablist'}
      %li.active
        %a{ :href => '#show_event_main_tab', :role => 'tab', 'data-toggle' => 'tab'}
          Main data
      %li
        %a{:href => '#show_event_range_tab', :role => 'tab', 'data-toggle' => 'tab'}
          Date range
      %li
        %a{:href => '#show_event_attach_tab', :role => 'tab', 'data-toggle' => 'tab'}
          Attachments

    .tab-content
      .tab-pane.fade.in.active#show_event_main_tab
        .form-group
          = f.label :holder, :class => 'control-label'
          .controls
          = render :partial => 'layouts/eventowner_select', :locals => { :f => f }

        .form-group
          = f.label :title, :class => 'control-label'
          .controls
            = f.text_field :title, :class => 'form-control'

        .form-group
          = f.label :icon, :class => 'control-label'
          .controls
          = render :partial => 'layouts/fa_select', :locals => { :f => f }

        .form-group
          = f.label :description, :class => 'control-label'
          .controls
            = f.cktext_area :description, :class => 'form-control', :ckeditor => { :language => 'uk', :toolbar => 'Pure', :uiColor => '#33ccff'}


      .tab-pane.fade#show_event_range_tab

        .form-group
          = f.label :starts_at, :class => 'control-label'
          .controls
            .input-group.datetimepicker
              = f.text_field :starts_at_string, :class => 'form-control'
              %span.input-group-addon
                %span.fa.fa-calendar

        .form-group
          = f.label :ends_at, :class => 'control-label'
          .controls
            .input-group.datetimepicker
              = f.text_field :ends_at_string, :class => 'form-control'
              %span.input-group-addon
                %span.fa.fa-calendar

        .form-group
          = f.label :all_day, :class => 'control-label'
          = f.check_box :all_day


      .tab-pane.fade#show_event_attach_tab

        .form-group
          = f.label :color, :class => 'control-label'
          .controls
            = f.color_field :color, :class => 'form-control'

        .form-group
          = f.label :text_color, :class => 'control-label'
          .controls
            = f.color_field :text_color, :class => 'form-control'

  .modal-footer
    = button_to 'Save', @event, :method => :post, :class => 'btn btn-primary pull-right  col-sm-3', :params => {:calendar_id => @calendar.id}
    %button.btn.btn-default{"data-dismiss" => "modal", :type => "button", :class => "pull-right"} Close

    = link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(@event, {:calendar_id => @calendar.id}), remote: true, :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger pull-left' if @event.persisted?

:javascript
  $(function () {
    $('.datetimepicker').datetimepicker({
       language: 'uk',
    });
  });
