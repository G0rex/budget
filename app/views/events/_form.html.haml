.modal-header
  %button.close{"data-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} &times;
    %span.sr-only Close

  %h4#myModalLabel.modal-title Редагування події
= form_for @event, remote: true, format: :json, :html => { :class => 'form-horizontal' } do |f|
  .modal-body
    .form-group
      = f.label :holder, :class => 'control-label'
      .controls
        = f.collection_radio_buttons :holder, [[1, 'Місто'], [2, 'Громада']],
        :first, :last, { item_wrapper_tag: false } do |b|
          = b.radio_button + ' ' + b.label(:class => b.value == 1 ? 'fa fa-university fa-lg' : 'fa fa-child fa-lg')
    .form-group
      = f.label :title, :class => 'control-label'
      .controls
        = f.text_field :title, :class => 'form-control'
    .form-group
      = f.label :icon, :class => 'control-label'
      .controls
        = f.text_field :icon, :class => 'form-control'
    .form-group
      = f.label :description, :class => 'control-label'
      .controls
        = f.cktext_area :description, :class => 'form-control', :ckeditor => { :language => 'uk', :toolbar => 'Pure', :uiColor => '#33ccff'}
    .form-group
      = f.label :starts_at, :class => 'control-label'
      .controls
        .input-group.datetimepicker
          = f.text_field :starts_at_string, :class => 'form-control'
          %span.input-group-addon
            %span.fa.fa-calendar
    .form-group
      = f.label :ends_at, :class => 'control-label'
      .controls
        .input-group.datetimepicker
          = f.text_field :ends_at_string, :class => 'form-control'
          %span.input-group-addon
            %span.fa.fa-calendar

    .form-group
      = f.label :all_day, :class => 'control-label'
      = f.check_box :all_day
    .form-group
      = f.label :color, :class => 'control-label'
      .controls
        = f.select :color, calendar_colors_list, :class => 'form-control'

  .modal-footer
    = button_to "Save", @event, :method => :post, :class => 'btn btn-primary pull-right'
    %button.btn.btn-default{"data-dismiss" => "modal", :type => "button", :class => "pull-right"} Close

    = link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(@event), remote: true, :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger pull-left' if @event.persisted?

:javascript
  $(function () {
    $('.datetimepicker').datetimepicker({
       language: 'uk',
    });
  });
