.modal-header
  %button.close{"data-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} &times;
    %span.sr-only Close
  %h4#myModalLabel.modal-title Редагування події

= form_for @event, remote: true, format: :json, :html => { :class => 'form-horizontal' } do |f|
  .modal-body
    .form-group
      .input-group
        .input-group-addon
          %span.glyphicon.glyphicon-pencil
        = f.text_field :title, {:placeholder => "Вкажіть назву", :type => "text", :class => 'form-control' }


    .form-group
      .controls
      = render :partial => 'eventowner_select', :locals => { :event => @event, :f => f }

    %ul.nav.nav-tabs.nav-justified{:role => 'tablist'}
      %li.active
        %a{ :href => '#show_event_main_tab', :role => 'tab', 'data-toggle' => 'tab'}
          Main data
      %li
        %a{:href => '#show_event_range_tab', :role => 'tab', 'data-toggle' => 'tab'}
          Date range
      %li
        %a{:href => '#show_event_attach_tab', :role => 'tab', 'data-toggle' => 'tab'}
          Attachments
      %li
        %a{:href => '#show_event_colors_tab', :role => 'tab', 'data-toggle' => 'tab'}
          Colors

    .tab-content
      .tab-pane.fade.in.active#show_event_main_tab
        .form-group
          = f.label :icon, :class => 'control-label'
          .controls
          = render :partial => 'layouts/fa_select', :locals => { :f => f }

        .form-group
          = f.label :description, :class => 'control-label'
          .controls
            = f.cktext_area :description, :class => 'form-control', :ckeditor => { :language => 'uk', :toolbar => 'Pure', :uiColor => '#33ccff'}

      .tab-pane.fade#show_event_range_tab

        .form-group
          = f.label :starts_at, :class => 'control-label'
          .controls
            .input-group.datetimepicker
              = f.text_field :starts_at_string, :class => 'form-control'
              %span.input-group-addon
                %span.fa.fa-calendar

        .form-group
          = f.label :ends_at, :class => 'control-label'
          .controls
            .input-group.datetimepicker
              = f.text_field :ends_at_string, :class => 'form-control'
              %span.input-group-addon
                %span.fa.fa-calendar

        .form-group
          = f.label :all_day, :class => 'control-label'
          = f.check_box :all_day




      .tab-pane.fade#show_event_attach_tab
        .panel.panel-info
          .panel-body
            .form-group
              %label{:for => "InputFile"} Виберіть файл
              %input#InputFile{:type => "file"}/
              %input#opisanie.form-control{:placeholder => "Введіть короткий опис файла", :type => "text"}/
              %p.help-block Додайте файл в список, також введіть короткий опис файла
            %button.btn.btn.btn-xs.btn-success{:style => "float: right;", :type => "submit"} Додати файл
            %div{:style => "clear: both; "}
            %hr
            .row
              .col-md-1
                %img{:height => "30", :src => "icons/Microsoft Office 2003 Word.png", :width => "30"}
              .col-md-10 Додаток до документу та довідка
              .col-md-1.glyphicon.glyphicon-remove
            .row
              .col-md-1
                %img{:height => "30", :src => "icons/Microsoft Office 2003 Excel.png", :width => "30"}/
              .col-md-10 Таблиця показників результатів
              .col-md-1.glyphicon.glyphicon-remove
            .row
              .col-md-1
                %img{:height => "30", :src => "icons/Adobe Acrobat CS3.png", :width => "30"}/
              .col-md-10 Бланки заяв для реєстрації
              .col-md-1.glyphicon.glyphicon-remove


      .tab-pane.fade#show_event_colors_tab

        .form-group
          = f.label :color, :class => 'control-label'
          .controls
            = f.color_field :color, :class => 'form-control'

        .form-group
          = f.label :text_color, :class => 'control-label'
          .controls
            = f.color_field :text_color, :class => 'form-control'

  .modal-footer
    = button_to 'Save', @event, :method => :post, :class => 'btn btn-primary pull-right  col-sm-3', :params => {:calendar_id => @calendar.id}
    %button.btn.btn-default{"data-dismiss" => "modal", :type => "button", :class => "pull-right"} Close

    = link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(@event, {:calendar_id => @calendar.id}), remote: true, :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger pull-left' if @event.persisted?

:javascript
  $(function () {
    $('.datetimepicker').datetimepicker({
       language: 'uk',
    });
  });
