.modal-header
  %button.close{"data-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} &times;
    %span.sr-only Close
  %h4#myModalLabel.modal-title= t('.title')

= form_for @event, remote: true, format: :json, :html => { :class => 'form-horizontal' } do |f|
  .modal-body
    .form-group
      .input-group
        .input-group-addon
          %span.glyphicon.glyphicon-pencil
        = f.text_field :title, {:placeholder => t('.title_placeholder'), :type => "text", :class => 'form-control' }


    .form-group
      .controls.pull-right
        = render :partial => 'eventowner_select', :locals => { :holder => @event.holder, :f => f }

    %ul.nav.nav-tabs.nav-justified{:role => 'tablist'}
      %li.active
        %a{ :href => '#show_event_main_tab', :role => 'tab', 'data-toggle' => 'tab'}
          = t('.tab1_title')
      %li
        %a{:href => '#show_event_range_tab', :role => 'tab', 'data-toggle' => 'tab'}
          = t('.tab2_title')
      %li
        %a{:href => '#show_event_attach_tab', :role => 'tab', 'data-toggle' => 'tab'}
          = t('.tab3_title')
      %li
        %a{:href => '#show_event_colors_tab', :role => 'tab', 'data-toggle' => 'tab'}
          = t('.tab4_title')

    .tab-content
      .tab-pane.fade.in.active#show_event_main_tab
        .form-group
          = f.label :icon, t('.icon'), :class => 'control-label'
          .controls
          = render :partial => 'layouts/fa_select', :locals => { :f => f }

        .form-group
          = f.label :description, t('.description'), :class => 'control-label'
          .controls
            = f.text_area :description, :class => 'form-control'

      .tab-pane.fade#show_event_range_tab

        .form-group
          = f.label :starts_at, t('.starts_at'), :class => 'control-label'
          .controls
            .input-group.datetimepicker
              = f.text_field :starts_at_string, :class => 'form-control'
              %span.input-group-addon
                %span.fa.fa-calendar

        .form-group
          = f.label :ends_at, t('.ends_at'), :class => 'control-label'
          .controls
            .input-group.datetimepicker
              = f.text_field :ends_at_string, :class => 'form-control'
              %span.input-group-addon
                %span.fa.fa-calendar

        .form-group
          = f.label :all_day, t('.all_day'), :class => 'control-label'
          = f.check_box :all_day

      .tab-pane.fade#show_event_attach_tab

        .panel.panel-info
          .panel-body
            .form-group
              = render :partial => 'layouts/file_upload'

      .tab-pane.fade#show_event_colors_tab
        .form-group
          = f.label :color, t('.color'), :class => 'control-label'
          .controls
            = f.color_field :color, :class => 'form-control'

        .form-group
          = f.label :text_color, t('.text_color'), :class => 'control-label'
          .controls
            = f.color_field :text_color, :class => 'form-control'

  .modal-footer
    = button_to t('form.save', :default => t("helpers.links.save")), @event, :method => :post, :class => 'btn btn-primary pull-right  col-sm-3', :params => {:calendar_id => @calendar.id}
    %button.btn.btn-default{"data-dismiss" => "modal", :type => "button", :class => "pull-right"}= t('.close')

    = link_to t('form.destroy', :default => t("helpers.links.destroy")), event_path(@event, {:calendar_id => @calendar.id}), remote: true, :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger pull-left' if @event.persisted?

:javascript
  $(function () {
    $('.datetimepicker').datetimepicker({
       language: 'uk',
    });
  });
