- model_class = Event

.modal-header{style: "background-color: #{@event.color}"}

  %button.close{"data-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} &times;
    %span.sr-only Close

  %h4#myModalLabel.modal-title
    %span.fa{:class => @event.icon, 'style' => "color: #{@event.text_color}"}
      = "#{@event.holder_text}: #{@event.title}"

.modal-body

  %ul.nav.nav-tabs{role: 'tablist'}
    %li.active
      %a{ :href => '#show_event_main_tab', :role => 'tab', 'data-toggle' => 'tab'}
        = t('.tab1_title')
    %li
      %a{:href => '#show_event_range_tab', :role => 'tab', 'data-toggle' => 'tab'}
        = t('.tab2_title')
    %li
      %a{:href => '#show_event_attach_tab', :role => 'tab', 'data-toggle' => 'tab'}
        = t('.tab3_title')

  .tab-content
    .tab-pane.fade.in.active#show_event_main_tab
      %p
        = @event.description.html_safe

    .tab-pane.fade#show_event_range_tab
      %p
        %strong= t('.starts_at') + ':'
        = @event.starts_at
      %p
        %strong= t('.ends_at') + ':'
        %br
        = @event.ends_at
      %p
        %strong= t('.all_day') + ':'
        %br
        = @event.all_day ? 'так' : 'ні'

    .tab-pane.fade#show_event_attach_tab


.modal-footer
  %button.btn.btn-default{"data-dismiss" => "modal", :type => "button", :class => "pull-right"} Close
