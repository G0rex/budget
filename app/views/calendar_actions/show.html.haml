- model_class = CalendarAction
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @calendar_action.title
%p
  %strong= model_class.human_attribute_name(:icon) + ':'
  %br
  = @calendar_action.icon.html_safe
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @calendar_action.description.html_safe
%p
  %strong= model_class.human_attribute_name(:bg_color) + ':'
  %br
  %div{style: "width: 50px; height: 50px; border: solid; background-color: #{@calendar_action.color}" }
%p
  %strong= model_class.human_attribute_name(:holder) + ':'
  %br
  = @calendar_action.holder


= link_to t('.back', :default => t("helpers.links.back")), calendar_actions_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_calendar_action_path(@calendar_action), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), calendar_action_path(@calendar_action), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
