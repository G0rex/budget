- model_class = CalendarAction
= content_for :header do
  .head.pull-left
    =t '.title'

%table.table.table-striped
  %thead
    %tr
      %th= t('.name')
      %th= t('.icon')
      %th= t('.description')
      %th= t('.color')
      %th= t('.holder')
      %th=t 'form.actions'
  %tbody
    - @calendar_actions.each do |calendar_action|
      %tr
        %td= link_to calendar_action.title, calendar_action_path(calendar_action)
        %td
          %span.fa{class: calendar_action.icon}
        %td= calendar_action.description.html_safe
        %td{style: "width: 50px; height: 50px; border: solid; background-color: #{calendar_action.color}" }
        %td= calendar_action.holder_string
        %td
          = link_to t('form.edit', :default => t("helpers.links.edit")), edit_calendar_action_path(calendar_action), :class => 'btn btn-default btn-xs'
          = link_to t('form.destroy', :default => t("helpers.links.destroy")), calendar_action_path(calendar_action), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('form.new', :default => t("helpers.links.new")), new_calendar_action_path, :class => 'btn btn-primary'
