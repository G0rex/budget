:javascript
   $(document).ready(function(){
     $('#edit_by_xls').click(function(){
        $('#xls_modal').modal();
     });

     $('[data-parent = "#area_acordion"]').click(function(){
        $.ajax({
          method: 'post',
          url: $(this).attr('data-url')
        })
     });
     $('#xls_info').popover({
      container: 'body',
      html: true,
      placement: 'left',
      content: $('#xls_info_content').html()
     });
   });

