:scss
  .crud_icons{
    img{
      width: 30px;
    }
  }

%h1 Listing content_manager_page_containers

= link_to 'New Page container', new_content_manager_page_container_path

%table.table.table-striped
  %tr
    %th= 'Header'
    %th= 'Content'
    %th
    %th= 'Action'
    %th
  - @page_containers.each do |page_container|
    %tr.crud_icons
      %td= page_container.header
      %td= page_container.content.html_safe
      %td= link_to image_tag('icons/loupe.png'), page_container
      %td= link_to image_tag('icons/pencil.png'), edit_content_manager_page_container_path(page_container)
      %td= link_to image_tag('icons/X_icon.png'), page_container, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br


