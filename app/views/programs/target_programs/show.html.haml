= content_for :header do
  .head.pull-left
    = t('programs.target_programs.show.header')

.container.col-sm-12.col-md-6
  %h2
    = @programs_target_program.title
  #accordion.panel-group
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#targets"}
            = t('programs.target_programs.show.targets')
      #targets.panel-collapse.collapse.in
        .panel-body
          = @programs_target_program.targets
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#tasks"}
            = t('programs.target_programs.show.tasks')
      #tasks.panel-collapse.collapse
        .panel-body
          %ol{:type => "1"}
            - @programs_target_program.tasks.each do |task|
              %li
                = task
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#results"}
            = t('programs.target_programs.show.results')
      #results.panel-collapse.collapse
        .panel-body
          %ol{:type => "1"}
            - @programs_target_program.expected_results.each do |result|
              %li
                = result

.col-sm-12
  = link_to t('form.edit'), edit_programs_target_program_path(@programs_target_program), :class => 'btn btn-primary'
  = link_to t('form.back'), '/programs/target_programs/list/' + @town.id, :class => 'btn btn-default'
