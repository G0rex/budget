:scss
  .news_wrapper{
    height: 200px;
    background-color: #f5f5f5;
    margin-bottom: 10px;
    overflow: hidden;
    .no_padding{
      padding: 0px;
    }
    .no_margin{
      margin: 0px;
    }
    .all_news_img{
      overflow: hidden;

      img{
        width: 100%;
      }
    }
    .news_time{
      margin-top: 15px;
      color: #808080;
      font-size: 13px;
      .glyphicon{
        color: green;
      }
    }
    .news_title{
      margin-top: 15px;
      font-size: 18px;


      a{
        text-decoration: none;
        color: #444;
      }
      a:hover{
        color: #0022cc;
      }
    }

    .all_news_text{
      overflow: hidden;
      font-size: 13px;
      color: #808080;
      margin: 13px 0px;
      height: 69px;


    }
  }


-@budget_news.each do |news|
  .col-xs-12.col-md-6
    .news_wrapper
      .col-md-4.col-xs-3.no_padding.no_margin
        .all_news_img
          = image_tag news.img.thumb, class: 'img-responsive'
      .col-md-8.col-xs-9
        .news_time
          %span.glyphicon.glyphicon-time{"aria-hidden" => "true"}
          = news.news_date.strftime "%H:%M %m-%d"
        .news_title
          = link_to news.title
        .all_news_text
          = news.news_preview
%br
.col-xs-12.text-center
  = paginate @budget_news