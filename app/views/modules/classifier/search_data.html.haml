:scss
  // init colors
  $button-background: #0c2231;
  $button-border: #0c2231;
  $button-active: #ffd304;
  $button-text: white;
  $search-background: white;
  $search-border: #0c2231;

  #search-data {
    .form-group {
      float: left;
      width: calc(100% - 33px);
      .select2-container {
        border: none;
        .select2-choice {
          height: 33px;
          line-height: 33px;
          background: $search-background;
          border: 1px solid $search-border;
          border-radius: 0;
          .select2-arrow {
            display: none;
          }
        }
      }
    }
    .advanced_search_button,
    .btn-switch-role {
      background: $button-background;
      border: 2px solid $button-border;
      color: $button-text;
      font-weight: bold;
      min-width: 125px;
      border-radius: 0;
      padding: 4px 10px;
    }
    .btn-switch-role[for="_role_payer"] {
      &:before {
        content: '\f111';
        font-family: FontAwesome;
        padding-right: 5px;
      }
    }
    .btn-switch-role[for="_role_recipt"] {
      &:before {
        content: '\f0c8';
        font-family: FontAwesome;
        padding-right: 5px;
      }
    }
    .btn-switch-role:before {
      color: $button-text;
    }
    input:checked + .btn-switch-role {
      background: $button-text;
      color: $button-background;
      border: 1px solid $button-border;
      &:after {
        content: '';
        display: block;
        border: 1px solid $button-active;
      }
      &:before {
        color: $button-active;
      }
    }
    .search-button {
      background: $button-background;
      color: $button-text;
      text-align: center;
      height: 33px;
      width: 33px;
      .fa-search {
        bottom: 0;
      }
    }
  }

#search-data
  -#%h1
    = t ('.header')

  = simple_form_for '', remote: true do |f|
    .row
      .col-md-7
        = f.input(:item, type: 'hidden', collection: @items.map{ |classd| ["#{classd.pnaz} #{classd.edrpou}", classd.id] },
        input_html: {'data-town-id' => params['town_id']}, label: false)
        .input-group-btn.search-button
          %i.fa.fa-search
      .col-md-5
        .row
          .col-lg-7
            = f.collection_radio_buttons :role, [['payer', t('.payer')] ,['recipt', t('.recipt')]], :first, :last, {checked: 'payer'} do |b|
              = b.radio_button(style: 'display: none') + b.label(class: 'btn btn-default btn-switch-role')
          .col-lg-5
            = link_to modules_classifier_advanced_search_path(@town), class: 'btn btn-primary advanced_search_button', remote: true do
              %i.fa.fa-cogs
              = t('.advanced_search')

    .results

:javascript
  $(document).ready(function() {
    $('#_item').select2({
      allowClear: true
    });
    $('#_item').on('change', function(data) { get_data(data.val); });
    $('[name="[role]"]').on('change', function() {
      var item = $('#_item').val();
      get_data(item);
    });
    $(document).on('click', '#edata_payments th', function() {
      $('#edata_payments th').not($(this)).removeClass('active').attr('data-sort-direction', 'asc');
      var item = $('#_item').val();
      var sortCol = $(this).attr('data-column');
      var sortDir = $(this).attr('data-sort-direction');
      get_data(item, sortCol, sortDir);
      $(this).attr('data-sort-direction', sort_direction(sortDir)).addClass('active');
    });
  });

  function get_data(d, _sortCol, _sortDir) {
    var town_id = $('#_item').data('town-id');
    var role = $('[name="[role]"]:checked').val();

    $.ajax({
      type: 'get',
      url: "#{modules_classifier_search_e_data_url}",
      dataType: 'script',
      data: {
        town_id: town_id,
        item: d,
        role: role,
        sort_col: _sortCol,
        sort_dir: _sortDir
      }
    });
  }

  function sort_direction(attr) {
    if (attr == 'asc') {
      return 'desc';
    }
    else {
      return 'asc';
    }
  }
