- @items.each do |item|
  %tr{'data-edrpou' => item['edrpou'], 'data-role' => @role}
    %td= item['edrpou']
    %td= item['pnaz']
    %td= item['naz_v']
    %td= item['adp']
#pagination.text-center
  = paginate @items, remote: true, theme: 'e_data_template', params: {'sort_col' => 'trans_date', 'sort_dir' => 'asc', "method" => 'post'}
:javascript
  $(document).ready(function() {
    // add event for change item select value by mouse click and hide items list
    $('#edata_items tbody tr').on('click', function() {
      $('#_item_' + $(this).data('role')).val($(this).data('edrpou')).trigger('change');
      $("#items-list").fadeOut();
    });
  });
