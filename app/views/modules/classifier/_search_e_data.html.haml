:scss
  // init colors
  $active: #ffd304;
  $text: #0c2231;

  #edata_payments {
    table {
      thead {
        th {
          white-space: nowrap;
          min-width: 90px;
          cursor: pointer;
          opacity: .7;
          &:hover {
            opacity: 1;
          }
          span {
            &:before {
              content: '\f0ec';
              font-family: FontAwesome;
              font-size: 12px;
              -ms-transform: rotate(90deg); /* IE 9 */
              -webkit-transform: rotate(90deg); /* Chrome, Safari, Opera */
              transform: rotate(90deg);
              float: left;
              margin-right: 5px;
            }
          }
        }
        .payment_details {
          width: 800px;
        }
        .active {
          background: none;
          span {
            border-bottom: 2px solid $active;
          }
        }
      }
      tbody {
        tr {
          opacity: .7;
          &:hover {
            opacity: 1;
          }
        }
      }
    }

    #pagination {
      .pagination {
        li {
          a {
            border: none;
            border-radius: 0;
            color: $text;
            padding: 2px 7px;
            font-weight: bold;
          }
        }
        .active {
          a {
            background-color: $active;
            color: $text;
          }
        }
      }
    }
  }

-if @payments.blank?
  = render partial: 'layouts/no_data_yet'
  -#= t('.no-data')

  :javascript
    $(document).ready(function() {
      $('.sharing').hide();
    });

-else
  #edata_payments.table-responsive
    %table.table.table-striped
      %thead
        %th{'data-column' => 'amount', 'data-sort-direction' => 'asc'}
          %span
            = t('.sum')
        %th{'data-column' => 'payer_name', 'data-sort-direction' => 'asc'}
          %span
            = t('.payer')
        %th{'data-column' => 'recipt_name', 'data-sort-direction' => 'asc'}
          %span
            = t('.recipt')
        %th.payment_details{'data-column' => 'payment_details', 'data-sort-direction' => 'asc'}
          %span
            = t('.purpose')
        %th.active{'data-column' => 'trans_date', 'data-sort-direction' => 'asc'}
          %span
            = t('.date')

      = render partial: 'modules/classifier/search_e_data_results'

    #pagination.text-center
      = paginate @payments, remote: true, theme: 'e_data_template', params: {'sort_col' => 'trans_date', 'sort_dir' => 'asc'}
    %a.btn.btn-success.btn-xs.pull-right{'id'=>'export_classifier', 'style'=>'margin-bottom: 50px'}
      =t("helpers.links.export")

:javascript
  $(document).ready(function() {
    $(document).ready(function() {
      $('.sharing').show();
    });
    $('#export_classifier').on('click', function(e){
      var town_id = $('#_item_payers').data('town-id');
      var start_date = $('#_startdate').val();
      var params = "&town_id="+town_id + "&payers_edrpous="
        + $('#_item_payers').val() + "&recipt_edrpous=" + $('#_item_recipt').val() + "&period=" + start_date ;
      var href = "#{modules_classifier_search_e_data_url(:format => :csv)}" + params ;
      $(this).attr('href', href);
    });
  });

