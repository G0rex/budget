- if current and current[:event]
  .current-action.col-xs-12
    .bar.col-xs-2
      - if current[:event].holder == 1
        = image_tag("calendar/city.png", width: '100%')
      - else
        = image_tag("calendar/people.png", width: '100%')
      .progress
        - if current[:event].holder == 1
          .stripe.stripe-city
        - else
          .stripe.stripe-people
        .stripe.stripe-grayed{'style' => "min-height: #{100 - current[:percent]}%; height: #{100 - current[:percent]}%;"}

      %h3
        #{current[:percent]}%
    .col-xs-9
      - if current[:event].holder == 1
        %h2.city
          #{holder_to_string(current[:event].holder)}
      - else
        %h2.people
          #{holder_to_string(current[:event].holder)}

      %p.content
        = truncate(current[:event].title.html_safe, :length => 300, :omission => '...')

