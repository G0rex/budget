#sidebar_table

:javascript
  function aSidebarTable() {
    var margin = {top: 20, right: 20, bottom: 30, left: 50},
        width, height

    function hide() {
      $("#sidebar_table").height(0).html('')
    }


    return {
      initialize: function() {
        width = $('#sidebar_chart').width() - margin.left - margin.right

      },
      hide: hide,
      show: function(data) {
        hide()

        if (data == null)
          return

        $("#sidebar_table").height('auto')



        div = '<table class="table table-hover">'
        $.each(data, function( index, value ) {
          var totalSize;
          if (value.parent) {
            totalSize = value.parent.amount;
          } else {
            totalSize = value.amount;
          }
          div += '<tr>'
            + '<td class="col-sm-8"><div style="float: left; margin-right: 10px; margin-top: 4px; width:10px; height:10px; background-color:' + value.color + '"></div>'
            + value.label + '</td>'
            + '<td class="col-sm-2" align="right">' + aVisify.helpers.formatNumber(value.amount) + '</td>'
            + '<td class="col-sm-2">' + aVisify.helpers.getPercentageString(value.amount, totalSize) + '</td>'
            + '</tr>'
        });
        div += '</table>'

        $('#sidebar_table').html(div);

        d3.selectAll("#sidebar_table tr")
            .style("cursor", "pointer")
            .on("click", function(d, i) {
                 chart.selectNode(data[i]);
               });
      },
    }
  }