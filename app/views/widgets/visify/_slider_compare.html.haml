:css
  .axis text {
    font: 10px sans-serif;
  }

  .axis path,
  .axis line {
    fill: none;
    stroke: #000;
    shape-rendering: crispEdges;
  }

  .bar {
    fill: steelblue;
    fill-opacity: 0.5;
    cursor: pointer;
  }

  .bartext {
    color: black;
    font-size: 9px;
  }

  #slider_compare .x.axis path {
    display: none;
  }

  label {
    position: absolute;
    top: 10px;
    right: 10px;
  }

#slider_compare.col-xs-12.col-md-8

:javascript
  function aSliderCompare(aContainer) {
    var margin = {top: 20, right: 20, bottom: 30, left: 20},
        width, height;

    var x, y, xAxis, yAxis;

    var svg;

    var color;

    var data;

    var current_month = 0, current_year = 0;

    function delay(d, i) { return i * 5; }

    function hide() {
      $("#slider_compare").height(0);
      svg.selectAll("*").remove();
    }

    function sort(data) {
      var x0 = x.domain(data.sort(false
              ? function(a, b) { return a.amount - b.amount; }
              : function(a, b) { return d3.ascending(parseInt(a.label), parseInt(b.label)); })
              .map(function(d) { return d.label; }))
              .copy();

      var transition = svg.transition().duration(150),
          delay = function(d, i) { return i * 10; };

      transition.selectAll(".bar")
          .delay(delay)
          .attr("x", function(d) { return x0(d.label); });

      transition.select(".x.axis")
          .call(xAxis)
        .selectAll("g")
          .delay(delay);
    }

    function get_history_data(data) {
      compare_months = []
      $.each( data, function( month, amount ) {
        if (month > 0) {
          compare_months.push({ label: month, amount: amount });
        }
      })
      return compare_months
    }

    function mouseclick(d) {
      if(d.label != current_month) {
        $("#slider_compare").find("rect").css("fill-opacity", "0.5").css("fill", "#9ecae1");
        $(this).css("fill-opacity", "1.0").css("fill", "#3182bd");
        current_month = d.label;
      } else {
        current_month = 0;
        $(this).css("fill-opacity", "0.5").css("fill", "#9ecae1");
      }
      chart.show(current_year, current_month);
    }

    function mouseover(d) {
      $(this).css("fill-opacity", "1.0");
    }

    function mouseout(d) {
      if(d.label != current_month) {
        $(this).css("fill-opacity", "0.5");
      }
    }

    function get_month_by_num(month) {
      return #{I18n.t :abbr_month_names, :scope => :date}[month]
    }

    function show(data) {

      sort(data);

      svg.selectAll("*").remove();
      $("#slider_compare").height(height + margin.top + margin.bottom);

      x.domain(data.map(function(d) { return !d.months ? get_month_by_num(d.label) : d.label; }));
      y.domain([0, d3.max(data, function(d) { return d.amount; })]);

      svg.append("g")
          .attr("class", "x axis")
          .attr("transform", "translate(0," + height + ")")
          .call(xAxis);

      svg.selectAll(".bar")
          .data(data)
        .enter().append("rect")
          .attr("class", "bar")
          .style("fill", function(d) { return d.label == current_month ? "#3182bd" : "#9ecae1"; })
          .attr("x", function(d) { return x(d.label); })
          .attr("width", x.rangeBand())
          .attr("y", height)
          .attr("height", 0)
          .on("mouseover", mouseover)
          .on("mouseout", mouseout)
          .on("click", mouseclick);

      svg.selectAll(".bartext")
        .data(data)
      .enter().append("text")
        .attr("class", "bartext")
        .attr("text-anchor", "middle")
        .attr("x", function(d) { return x(d.label) + x.rangeBand() / 2; })
        .attr("y", function(d) { return height; })

      svg.transition().duration(250).selectAll(".bar")
        .attr("height", function(d) { return height - y(d.amount); })
        .attr("y", function(d) { return y(d.amount); })

      svg.transition().duration(250).selectAll(".bartext")
        .attr("y", function(d) { return y(d.amount) - 5; })
        .text(function(d){
          return aVisify.helpers.formatNumber(d.amount);
        })

    }

    return {
      initialize: function(pHeight) {
        width = $(aContainer).width() - margin.left - margin.right,
        height = pHeight - margin.top - margin.bottom;

        x = d3.scale.ordinal()
            .rangeRoundBands([0, width], .1);

        y = d3.scale.linear()
            .range([height, 0]);

        xAxis = d3.svg.axis()
            .scale(x)
            .orient("bottom");

        svg = d3.select("#slider_compare").append("svg")
            .attr("width", width + margin.left + margin.right)
            .attr("height", height + margin.top + margin.bottom)
          .append("g")
            .attr("transform", "translate(" + margin.left + "," + margin.top + ")");

        color = d3.scale.category20c();

      },
      hide: hide,
      show: function(node, month, year) {

        if(!node.history) {
          hide();
          return;
        }
        data = get_history_data(node.history[year]);

        if (data == null || data.length == 0){
          hide();
          return;
        }
        current_month = month;
        current_year = year;
        show(data);             // show months compare for the last year
      },
      current_year: function() {
        return current_year;
      },
      set_month: function(month) {
        current_month = month;
      }
    }
  }

