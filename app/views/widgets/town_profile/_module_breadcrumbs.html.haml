:scss
  .breadcrumb {
    padding: 0 0 30px;
    margin: 0;
    background-color: transparent;
    font-family: 'Lato', sans-serif;
    font-size: 18px;
    font-weight: 500;
    li {
      a {
        color: black;
        text-decoration: none;
        &:hover,
        &:focus {
          color: #ffd304;
        }
      }
    }
    .active {
      a {
        color: black;
        text-decoration: none;
        cursor: text;
        border-bottom: 2px solid #ffd304;
        padding-bottom: 2px;
        &:hover,
        &:focus {
          color: black;
        }
      }
    }
  }
  .breadcrumb li + li:before {
    font: 26px fontawesome;
    content: '\f105';
    padding: 0 5px;
    color: black;
    position: relative;
    bottom: -3px;
  }
  .breadcrumb li:nth-child(1):before {
    display: none;
  }

%ol.breadcrumb
  %li.active
    %a{:href => "#"}
      =t('new_design.town_profile.avaliable_modules')