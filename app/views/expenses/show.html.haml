- model_class = Expense

= content_for :header do
  .head.pull-left
    %i.fa.fa-money
    #{t('.title')}:
    %span.descr
      #{@expense.title}

%ul.views.nav.nav-tabs{role: 'tablist'}
  %li.active
    %a{href: '#bubbletree', role: 'tab', 'data-toggle' => 'tab'}
      = t('.tab_bubbletree')
  %li
    %a{href: '#sunburst', role: 'tab', 'data-toggle' => 'tab'}
      = t('.tab_sunburst')
  %li
    %a{href: '#treemap', role: 'tab', 'data-toggle' => 'tab'}
      = t('.tab_treemap')
.tab-content
  #bubbletree.tab-pane.fade.in.active
    = render partial: 'budget_files/bubbletree', :locals => { budget_file_id: @expense.id }
  #sunburst.tab-pane.fade
    = render partial: 'budget_files/sunburst', :locals => { budget_file_id: @expense.id }
  #treemap.tab-pane.fade
    = render partial: 'budget_files/treemap', :locals => { budget_file_id: @expense.id }


= link_to t('.back', :default => t("helpers.links.back")), budget_files_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_expense_path(@expense), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), expense_path(@expense), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
