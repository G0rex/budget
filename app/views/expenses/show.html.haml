- model_class = Expense
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @expense.title
%p
  %strong= model_class.human_attribute_name(:file) + ':'
  %br
  = @expense.file


= link_to t('.back', :default => t("helpers.links.back")), expenses_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_expense_path(@expense), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), expense_path(@expense), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
