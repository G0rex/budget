= bootstrap_form_for @user, :html => { :class => 'form-vertical' } do |f|
  .form-group
    = f.text_field :name
  .form-group
    = f.text_field :email
  .form-group
    = f.text_field :last_sign_in_at
  .form-group
    = f.select :town, options_for_select( [nil] + t('budget_files.form.cities').split('|'), @user.town), class: 'select-town form-control'
  .form-group
    Admin:
    = render partial: 'roles', :locals => { roles: @user.roles }

  .actions
    = f.submit 'Save'
