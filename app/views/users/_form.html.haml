= bootstrap_form_for @user, :html => { :class => '' } do |f|
  .col-sm-6
    .form-group
      = f.text_field :name
    .form-group
      = f.text_field :phone
    .form-group
      = f.text_field :organisation
    .form-group
      = f.text_field :email
    .form-group
      = f.select :town, options_for_select( [nil] + Town.cities + Town.areas, @user.town), class: 'select-town form-control'

  .col-sm-6
    .form-group
      %label
        = check_box_tag :locked, @user.locked, @user.locked
        = t('.locked')
    .form-group
      = f.text_field :last_sign_in_at
    .form-group
      Ролі:
      - for role in [:public_organisation, :city_authority]
        %label
          = check_box_tag "roles[]", role, @user.roles.include?(role)
          = role

  .clear
  = f.submit 'Save', class: 'btn btn-primary'
