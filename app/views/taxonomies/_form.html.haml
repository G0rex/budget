= form_for @taxonomy do |f|
  - if @taxonomy.errors.any?
    #error_explanation
      %h2= "#{pluralize(@taxonomy.errors.count, "error")} prohibited this taxonomy from being saved:"
      %ul
        - @taxonomy.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :taxonomies
    = f.text_field :taxonomies
  .actions
    = f.submit 'Save'
