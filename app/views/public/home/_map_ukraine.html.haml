:css
  .map_container {
    height: 500px;
  }


= content_for :top do
  .map_container
    = render partial: 'map'



:javascript

  $(document).ready(function() {

    var aRepairMap = RepairMap()

    $.ajax({
      method: 'get',
      url: '#{public_ukraine_geo_json_path}',
      dataType: 'json',
      data: {
        type: 'areas',
      }
    })
    .done(function (data) {
      aRepairMap.addGeoJson(data, false )
    })
    .fail(function () {
    });

    $.ajax({
      method: 'get',
      url: '#{public_ukraine_geo_json_path}',
      dataType: 'json',
    })
    .done(function (data) {
      aRepairMap.addGeoJson(data, true )
    })
    .fail(function () {
    });

  });
