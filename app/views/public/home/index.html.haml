:css
  .main-pic {
    width: 500px;
    height: 250px;
    clear: right;
    float: left;
    margin: 0 15px 0 15px;
  }

  .main-text {
    font-size: 1.1em;
    padding-left: 15px;
    text-align: justify;
  }
  .demo {
    float: right;
  }
  .main-block {
    padding: 15px 0 0 0;
  }

  @media(min-width: 320px) and (max-width: 767px){
    .main-pic {
      width: 300px;
      height: 150px;
    }
    .main-block {
      padding: 15px 0 30px 0;
    }
    .demo {
      margin-right: 15px;
    }
  }
  @media(min-width: 768px) and (max-width: 991px){
    .main-pic {
      display: none;
    }
    .demo {
      float: none;
    }
  }
  @media(min-width: 992px) and (max-width: 1199px){
    .main-pic {
      display: none;
    }
  }
  @media(min-width: 1200px) and (max-width: 1349px){
    .main-pic {
      width: 300px;
      height: 150px;
    }
  }
  @media(min-width: 1350px) and (max-width: 1579px){
    .main-pic {
      width: 350px;
      height: 175px;
    }
  }
  @media(min-width: 1580px) and (max-width: 1920px){

  }

