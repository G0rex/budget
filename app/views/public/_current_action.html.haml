- if current[:event]
  .current-action
    .infobox.col-sm-2
      .infobox-progress
        .chart{'data-percent' => current[:percent]}
          = "#{current[:percent]}%"
    %span.col-sm-10
      %h4
        = current[:holder_text]
      .infobox-content
        = current[:title]
        = link_to(event_path(current[:event], { :calendar_id => @calendar.id}), :class => 'btn btn-default', :remote => true) do
          %i.fa.fa-info
            Детальніше

  :javascript
    $(function () {
      $('.chart').easyPieChart({
          barColor: $(this).data('color'),
          trackColor: '#EEEEEE',
          scaleColor: false,
          lineWidth: 2,
          animate: 700,
          size:50
      });
    });

