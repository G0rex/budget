= content_for :header do
  .head.pull-left
    %i.fa.fa-calendar
      Бюджетний календар: #{@calendar.title}
    %span.descr
      = @calendar.description
  #calendar_subscriber
    = render partial: 'subscribe', :locals => { subscriber: @subscriber, calendar: @calendar}

= render partial: 'timelinejs'


.left-panel.col-lg-3.col-xs-6.pull-left
  = render partial: 'countdown'
  = render partial: "current_action", :locals => { current: @current_event1 }
  = render partial: "current_action", :locals => { current: @current_event2 }

.right-panel.col-lg-3.col-xs-6.pull-right
  = render partial: 'event'


.center.col-lg-6.col-xs-12
  %ul.views.nav.nav-tabs{role: 'tablist'}
    %li.active
      %a{href: '#calendar_year', role: 'tab', 'data-toggle' => 'tab'}
        = t('.tab_calendar_year')
    %li
      %a{href: '#calendar_month', role: 'tab', 'data-toggle' => 'tab'}
        = t('.tab_calendar_month')
    .tab-content
      #calendar_year.tab-pane.fade.in.active
        = render partial: 'pie_cycle'
      #calendar_month.tab-pane.fade
        = render partial: 'calendar'

  .legend
    .pull-left
      = image_tag("calendar/inf-city.png", width: '200px')
    .pull-right
      = image_tag("calendar/inf-citizens.png", width: '200px')

