:css
  .bsize {
    font-size: .73em;
    background-color: rgba(128,128,128,.35);

  }
  .fa-t-fix {
    font-size: .47em;
  }
  .fa-folder-o {
    color: #808080;
  }
  .fa-stack:hover .fa-folder-o {
    color: #0099da !important;
  }
  .bcol :hover {
    color: #0099da !important;
  }
  .br-red{
  border: solid 1px red;
  }
  .stat {
    position: absolute;
    right: 10px;
    bottom: 5px;
  }


%h3.right-line
  Документи
  %span.badge.bsize.count
    = @town.documentation_documents.count()

.owl-example.owl-carousel
  - Documentation::Branch.all.each do |br|
    - count = @town.documentation_documents.where(:branch => br).count()
    - if count > 0
      .owl-carousel-item
        .town.thumbnail
          .row
            .col-md-4
              %i.fa.fa-folder-o.fa-4x
            .col-md-8
              = br.title
            %span.stat
              %i.fa.fa-file-text-o
              %span
                =count