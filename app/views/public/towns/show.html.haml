:css
  .budget {
    cursor: pointer;
  }
  .budget.active {
    cursor: default;
    font-weight: bold;
  }

  .nav-tabs {
    height: 100vh;
  }

  #towns_profile .tabs-left > .nav-tabs {
    border-right: 1px solid #0199DA;
  }

  #towns_profile .tabs-left > .nav-tabs .active > a,
  #towns_profile .tabs-left > .nav-tabs .active > a:hover,
  #towns_profile .tabs-left > .nav-tabs .active > a:focus {
    border-color: #0199DA transparent #0199DA #0199DA;
  }
  .title-town {
    text-align: center;
    padding-bottom: 5px;
    font-size: 1.2em;
    font-weight: bold;
    color: rgb(1, 153, 218);
    line-height: 1em;
  }

  @media(min-width: 320px) and (max-width: 767px){
    .thumbnail {
      width: 75%;
    }
  }
  @media(min-width: 768px) and (max-width: 991px){
    .thumbnail {
      width: 95%;
    }
  }
  @media(min-width: 992px) and (max-width: 1199px){

  }
  @media(min-width: 1200px) and (max-width: 1349px){

  }
  @media(min-width: 1350px) and (max-width: 1579px){
    .tabbable {
     width: 80%;
    }
  }
  @media(min-width: 1580px) and (max-width: 1920px){
    .tabbable {
     width: 70%;
    }
  }


-#=content_for :header do
-#  .head.pull-left
-#    =@town.title

.col-sm-8#towns_profile
  / tabs left
  .tabbable.tabs-left
    %ul.nav.nav-tabs.col-sm-3
      .col-xs-12.head.pull-left.title-town
        =@town.title
      %li
        %img.thumbnail{src: @town.img.thumb.url, :style => 'display:block; margin:auto;'}
      %li.active
        %a{"data-toggle" => "tab", :href => "#description"} Короткі відомості
      %li
        %a{"data-toggle" => "tab", :href => "#portfolio"}
          = t('public.towns.portfolio.visuals')
          %span.badge.bsize.count
            = @town_items.length.to_s
      %li
        %a{"data-toggle" => "tab", :href => "#documents"}
          = t('public.towns.portfolio.documents')
          %span.badge.bsize.count
            = @documents.length
    .tab-content
      #description.tab-pane.active.fade.in
        .col-sm-12.col-md-5.col-lg-6
          %h3
            Короткі відомості
          = @town.description ? @town.description : ''
          %h3
            Корисні посилання
          - unless (@town.links.nil?)
            %p
              =@town.links.html_safe
      #portfolio.tab-pane.fade
        -#%h3
        -#  = t('public.towns.portfolio.visuals')
        .row
          - %w(budget programs keys calendar sankey repair).each do |item|
            = render partial: 'portfolio', :locals => { :item => item }
      #documents.tab-pane.fade
        -#%h3
        -#  = t('public.towns.portfolio.documents')
          -#%span.badge.bsize.count
          -#  = @town.documentation_documents.count()
        = render partial: 'docs'
  / /tabs
.col-sm-4
  = render partial: 'map_ukraine'
