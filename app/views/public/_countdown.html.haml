- if @countdown_event and @countdown_event.ends_at > Date.current
  .countdown
    = link_to(event_path(@countdown_event, { :calendar_id => @calendar.id }), :class => '', :remote => true) do
      %h4.title.col-xs-12
        .date.col-s2m-4.pull-right{ 'data-date' => @countdown_event.ends_at}
        #{truncate(@calendar.countdown_title.html_safe, :length => 100, :omission => '...')}


  :javascript
    $(function() {
      $('.countdown .date')
        .TimeCircles({
          circle_bg_color: "#CCCCCC",
          fg_width: 0.04,
          time: {
            Days: {
              show: true,
              text: "Днів",
              color: "#FF9933"
            },
            Hours: {
              show: false,
            },
            Minutes: {
              show: false,
            },
            Seconds: {
              show: false,
            },
          }
        });
    })
