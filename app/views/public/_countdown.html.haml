.countdown
  %h3
    До закінчення реестрації.....
  .col-sm-offset-5.col-sm-8.date{ 'data-date' => '2014-08-01 00:00:00', style: 'width: 300px; height: 85px; padding: 0px; box-sizing: border-box'}
  .clearfix
  %a.btn.btn-default{ href: '#' }
    Детальніше
    %i.fa.fa-info


:javascript

  $(function() {
    width = $('.countdown').parent().width()

    $('.countdown').css('top', width  / 2 - 100).width(width)

    $('.countdown .date').TimeCircles({
      time: {
        Days: {
          show: true,
          text: "Днів",
          color: "#FC6"
        },
        Hours: {
          show: false,
        },
        Minutes: {
          show: false,
        },
        Seconds: {
          show: false,
        }
      }
    });
  });
