= bootstrap_form_for @repairing_repair, url: repairing_layer_repair_path(@repairing_repair.layer.id, @repairing_repair.id), remote: true do |f|

  = f.text_field :title
  = f.text_field :obj_owner
  = f.text_field :subject
  = f.text_field :work

  .col-xs-4
    = f.text_field :amount
  .col-xs-4
    = f.text_field :repair_date
  .col-xs-4
    = f.text_field :warranty_date

  -#= f.text_field :coordinates, multiple: true

  = f.text_field :address
  = f.text_field :address_to

  = f.text_area :description, :rows => "4"

  .clear
  = f.submit 'Зберегти', :class => 'btn btn-primary'
  = link_to 'Destroy', repairing_layer_repair_path(@repairing_repair.layer.id, @repairing_repair.id), :method => :delete, remote: true, :data => { :confirm => 'Are you sure?' }, class: "btn btn-warning"