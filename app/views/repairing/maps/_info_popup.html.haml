:scss

  // init colors
  $dark-blue: #0c2231;
  $green-blue: #7D94A4;
  $white: white;
  $font-size-title: 1.4rem;

  .new_info_panel{
    min-width: 220px;
    border: 1px solid $dark-blue;
    .header{
      padding: 7px 5px 5px 7px;
      background: $dark-blue;
      color: $white;
      vertical-align: bottom;
      .amount{
        float:left;
        //text-align: center;
        font-size: 1.7rem;
        font-weight: 600;
        //text-transform: lowercase; // for pluralize
      }
      .start_date{
        padding-right: 15px;
        float: right;
        font-weight: 600;
        font-size: 1.7rem;
      }
    }
    .title_repair{
      padding: 5px 7px 2px 7px;
      font-size: $font-size-title;
      line-height: 1.3;
      color: $dark-blue;

    }
    .more-text{
        font-weight: bold;
        font-style: italic;
        font-size: $font-size-title;
        text-align: right;
        color: $dark-blue;
        cursor: pointer;
        padding: 2px 4px;
        &:hover,
        &:focus{
          color: $green-blue;
        }
      }
  }
.new_info_panel
  .header.clearfix
    .amount
      = "â‚´"
      = number_to_human(@repair.amount)
    .start_date
      = @repair.repair_start_date
  .title_repair
    -#%i.fa.fa-graduation-cap
    = @repair.subject.blank? ? @repair.work : @repair.subject
  .more-text
    =t('.more')
-#.row
  .info_panel
    .info_header
      %strong="#{@repair.subject.blank? ? @repair.work : @repair.subject}"
    %hr.heroviy
    .info_text
      .row
        .text_title.col-xs-4
          %strong= get_address_title
        .text_desc.col-xs-8
          =@repair.address
      - unless @repair.subject.blank?
        .row
          .text_title.col-xs-4
            %strong="#{t('repairing.maps.info_popup.info_works')} :"
          .text_desc.col-xs-8
            = @repair.work
      - unless @repair.spending_units.blank?
        .row
          .text_title.col-xs-4
            %strong="#{t('repairing.maps.info_popup.info_spending_units')} :"
          .text_desc.col-xs-8
            = @repair.spending_units
      - unless @repair.obj_owner.blank?
        .row
          .text_title.col-xs-4
            %strong="#{t('repairing.maps.info_popup.info_performer')} :"
          .text_desc.col-xs-8
            =@repair.obj_owner
      .row
        .text_title.col-xs-4
          %strong="#{t('repairing.maps.info_popup.info_price')} :"
        .text_desc.col-xs-8
          ="#{number_to_currency(@repair.amount)}"
