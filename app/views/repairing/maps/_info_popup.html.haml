.row
  .info_panel
    .info_header
      %strong=@repair.title
    %hr.heroviy
    .info_text
      .row
        .text_title.col-xs-4
          %strong="#{t('repairing.maps.info_popup.info_adress')} :"
        .text_desc.col-xs-8
          =@repair.address
      .row
        .text_title.col-xs-4
          %strong="#{t('repairing.maps.info_popup.info_works')} :"
        .text_desc.col-xs-8
          = @repair.work
      .row
        .text_title.col-xs-4
          %strong="#{t('repairing.maps.info_popup.info_performer')} :"
        .text_desc.col-xs-8
          =@repair.obj_owner
      .row
        .text_title.col-xs-4
          %strong="#{t('repairing.maps.info_popup.info_price')} :"
        .text_desc.col-xs-8
          ="#{number_to_currency(@repair.amount)}"
