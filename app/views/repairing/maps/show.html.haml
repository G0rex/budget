:css
  .map_container {
    height: 800px;
  }


= content_for :top do
  .map_container
    = render partial: 'map'



:javascript

  $(document).ready(function() {

    var aRepairMap

    $.ajax({
      method: 'get',
      url: '#{repairing_geo_json_path}',
      dataType: 'json',
    })
    .done(function (data) {
      aRepairMap = aRepairMap = RepairMap({ clusterMarkers: true })
      aRepairMap.addGeoJson(data)
    })
    .fail(function () {
    });

  });
