:css
  .map_container {
    height: 800px;
  }


= content_for :top do
  .map_container
    = render partial: 'map'

= link_to 'Edit', edit_repairing_map_path(@repairing_map)
\|
= link_to 'Back', repairing_maps_path



:javascript

  $(document).ready(function() {

    var aRepairMap

    $.ajax({
      method: 'get',
      url: '#{geo_json_repairing_map_path(@repairing_map)}',
      dataType: 'json',
    })
    .done(function (data) {
      aRepairMap = aRepairMap = RepairMap({})
      aRepairMap.addGeoJson(data)
    })
    .fail(function () {
    });

  });
