:scss
  .buttons{
    .button_to, div{
      display: inline-block;
    }
    form{
        margin: 5px 2px;
    }
    div input{
      font-size: 14px;
      padding: 4px 10px;
      //color: white;
      //background: #fbf069;
    }
    input:hover{
      background: transparent;
    }
  }

.buttons
  = button_to "Усі книги", library_books_path, remote: true, :method => :get
  - cat_nil = Library::Book.pluck(category: nil).uniq
  - if cat_nil[0] == nil
    = button_to "Без категорії 1", library_books_path(category_nil: "nil"), remote: true, :method => :get
  - categories = Library::Book.pluck(:category).uniq.compact.sort   # .compact - delete all nil elements
  - categories.each do |catg|
    - if catg == ''
      = button_to "Без категорії 2", library_books_path(category_empty: "empty"), remote: true, :method => :get
    - elsif catg != ''
      = button_to "#{catg}", library_books_path(category: catg), remote: true, :method => :get