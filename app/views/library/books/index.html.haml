:css
  .documents_search {
    margin-top: 20px;
  }

= content_for :header do
  .header.pull-left
    %h1
      = t('.library')
      %small
        = "books"

-#.col-xs-12.documents_search
-#  = render partial: 'search'

.documentation.col-xs-12.table-responsive
  %h1= link_to 'New book', new_library_book_path, :class => 'btn btn-success'
  %table.table.table-striped
    %thead
      %tr
        %th{:colspan =>2}
          = "Файл"
        %th
          = sortable "title", "Назва"
        %th
          = sortable "author", "Автор"
        %th
          = sortable "year_publication", "Опубліковано"
        %th
          = "Опис"
        %th
          = "Дії"
        -#%th
        -#  = sortable "yearFrom", t('.years')
        -#%th
        -#  = sortable "town_id", t('.town')
        -#%th
        -#  = sortable "branch_id", t('.type')
        -#%th
        -#  = sortable "locked", t('.locked')
    %tbody#results
      = render partial: 'search_books', :locals => { books: @library_books }
  = will_paginate @library_books, renderer: BootstrapPagination::Rails, :previous_label => "Назад", :next_label => "Вперед"
