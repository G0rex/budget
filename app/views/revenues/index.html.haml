- model_class = Revenue

= content_for :header do
  .head.pull-left
    #{t('.title')}

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:file)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @revenues.each do |revenue|
      %tr
        %td= link_to revenue.title, revenue_path(revenue)
        %td= revenue.file
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_revenue_path(revenue), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), revenue_path(revenue), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_revenue_path, :class => 'btn btn-primary'
