:css
  .navbar.navbar-default{
    height: 100px;
    background: rgb(12, 21, 62);
    background: -moz-linear-gradient(90deg, rgb(12, 21, 62) 25%, rgb(24, 42, 112) 85%);
    background: -webkit-linear-gradient(90deg, rgb(12, 21, 62) 25%, rgb(24, 42, 112) 85%);
    background: -o-linear-gradient(90deg, rgb(12, 21, 62) 25%, rgb(24, 42, 112) 85%);
    background: -ms-linear-gradient(90deg, rgb(12, 21, 62) 25%, rgb(24, 42, 112) 85%);
    background: linear-gradient(180deg, rgb(12, 21, 62) 25%, rgb(24, 42, 112) 85%);
  }
  .navbar-default .navbar-nav > li > a, .block-lng {
    color: #fff;
    text-transform: uppercase;
  }
  .block-lng img{
    width: 30px;
    height: auto;
  }
  .lng-item{
    float: left;
    background: rgba(20,80,159,0.5);
    padding: 3px 7px;
    margin: 30px 5px 5px 5px;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    transition: 0.3s;
  }
  .lng-item.active{
    background: rgba(20,80,159,0.7);
  }
  .lng-item > a{
    color: #fff;
  }
  .lng-item:hover{
    background: rgba(20,80,159,1);
    transition: 0.3s;
  }
  .collapse.in{
    background: rgb(12, 21, 62);
    background: -moz-linear-gradient(90deg, rgb(12, 21, 62) 25%, rgb(24, 42, 112) 85%);
    background: -webkit-linear-gradient(90deg, rgb(12, 21, 62) 25%, rgb(24, 42, 112) 85%);
    background: -o-linear-gradient(90deg, rgb(12, 21, 62) 25%, rgb(24, 42, 112) 85%);
    background: -ms-linear-gradient(90deg, rgb(12, 21, 62) 25%, rgb(24, 42, 112) 85%);
    background: linear-gradient(180deg, rgb(12, 21, 62) 25%, rgb(24, 42, 112) 85%);
    margin-top: 45px;
  }
  .navbar-default .navbar-collapse, .navbar-default .navbar-form {
    border: 1px dotted #EEEEEE;
  }


