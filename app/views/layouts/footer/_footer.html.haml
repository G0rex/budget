:scss
  footer {
    width: 100%;
    position: absolute;
    background: #0c2231;
    .footer-wrapper {
      .container {
        .row {
          margin-left: 0;
          margin-right: 0;
          .footer-logo {
            padding: 0;
            margin: 15px 0 0 0;
            color: white;
          }
          .footer-text {
            margin: 15px 0 25px;
            padding: 0 0 0 15px;
            > p {
              margin: 0;
              padding-left: 10px;
              color: #ffffff;
              text-align: justify;
              line-height: 1.8rem;
            }
            a {
              color: white;
              &:hover,
              &:focus {
                color: #ffd304;
                text-decoration: none;
              }
            }
          }
          .social-btns {
            p {
              color: white;
            }
          }
        }
      }
    }
  }
  @media (max-width: 767px) {
    footer {
      .footer-wrapper {
        .container {
          .row {
            .footer-logo {
              margin-top: 0;
              padding-bottom: 10px;
            }
            .footer-text {
              p {
                margin-bottom: 0;
              }
            }
            .social-btns {

            }
          }

        }
      }
    }
  }
  @media (min-width: 321px) and (max-width: 449px) {
    footer {
      .footer-wrapper {
        .container {
          .row {
            .footer-logo {
              margin-top: 0;
              padding-bottom: 0;
              a {
                img {
                  padding: 0 20%;
                  margin: 15px 0;
                }
              }
            }
            .footer-text {
              margin: 0;
              padding: 0 15px;
              p {
                font-size: 1.3rem;
                line-height: 1.5rem;
                padding: 0;
                margin-bottom: 0;
              }
            }
            .social-btns {

            }
          }

        }
      }
    }
  }
  @media (max-width: 320px) {
    footer {
      .footer-wrapper {
        .container {
          .row {
            .footer-logo {
              margin-top: 0;
              padding-bottom: 0;
              a {
                img {
                  padding: 0 20%;
                  margin: 15px 0;
                }
              }
            }
            .footer-text {
              margin: 0;
              padding: 0 15px;
              p {
                font-size: 1.3rem;
                line-height: 1.5rem;
                padding: 0;
                margin-bottom: 0;
              }
            }
            .social-btns {

            }
          }

        }
      }
    }
  }

%footer
  .footer-wrapper
    .container
      .row
        .col-xs-12.col-sm-4.col-md-2.footer-logo
          =link_to '#' do
            = image_tag('new_design/eidos-logo.png', class: 'img-responsive')
        .col-xs-12.col-sm-8.col-md-10.footer-text
          %p
            =t('new_design.footer.footer-text')
          %p
            =t('new_design.footer.based_code')
          %a{'xmlns:dct' => 'http://purl.org/dc/terms/', 'href' => 'https://github.com/kavaleriy/budget', 'rel' => 'dct:source'}
            %i.fa.fa-github
            https://github.com/kavaleriy/budget
        .col-xs-12.social-btns
          %p
            btns block