.navbar.navbar-default.navbar-static-top
  .container-fluid

    %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar

    .navbar-collapse.collapse.navbar-responsive-collapse.navbar-right
      %ul.nav.navbar-nav
        %li.dropdown
          %a.dropdown-toggle{"href" => "#", "data-toggle" => "dropdown"}
            %i.fa.fa-bar-chart-o
            = t('.budget')
            %span.caret
          %ul.dropdown-menu{'role' => "menu"}
            %li= link_to t('.module2'), "/sankeys"
            %li= link_to t('.module3'), "/vtarnay/module3"
            %li= link_to t('.module4'), "/vtarnay/module4"
            %li= link_to t('.module5'), "/vtarnay/module5s"
            %li= link_to t('.module7'), "/vtarnay/module7s"
            %li= link_to t('.module8'), "/repair_map/maps"

        .lang.pull-right
          - if I18n.locale == I18n.default_locale
            %b Укр
            |
            = link_to "En", :locale=>'en'
          - else
            = link_to "Укр", :locale=>'uk'
            |
            %b En


    .header
      = yield :header
