- model_class = Calendar
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

.col-md-12
  .row-fluid
    .col-md-2
      = render partial: "city_actions"
    .col-md-8
      .space
      #calendar.fc.fc-ltr{:calendar_id => @calendar.id }
    .col-md-2
      = render partial: "people_actions"

#eventModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content



= link_to t('.back', :default => t("helpers.links.back")), calendars_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_calendar_path(@calendar), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), calendar_path(@calendar), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
