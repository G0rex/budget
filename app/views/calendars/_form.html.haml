= form_for @calendar, :html => { :class => 'form-horizontal' } do |f|
  .form-group
    = f.label :dt_start, :class => 'control-label'
    .controls
      = f.text_field :dt_start, :class => 'form-control'
  .form-group
    = f.label :dt_end, :class => 'control-label'
    .controls
      = f.text_field :dt_end, :class => 'form-control'
  .form-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'form-control'
  .form-group
    = f.label :body, :class => 'control-label'
    .controls
      = f.text_field :body, :class => 'form-control'
  = f.submit nil, :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), calendars_path, :class => 'btn btn-default'
