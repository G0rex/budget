      .panel.panel-default.no_overflow
        #cityFour.panel-heading{:role => "tab"}
          %h4.panel-title
            %a.collapsed{"aria-controls" => "cityCollapseFour", "aria-expanded" => "false", "data-parent" => "#city_accordion", "data-toggle" => "collapse", :href => "#cityCollapseFour", :role => "button"}
