:scss
  .e-e-left .external-events{
    direction: rtl;
  }
  .e-e-left .external-events .e-e-left-text{
    direction: ltr;
  }
  #city_acordion > div {
    overflow : visible;
  }
  #city_accordion > div {
    overflow : visible;
    border: none;
  }

.external-events
  .e-e-left-text
    #city_accordion.panel-group{"aria-multiselectable" => "true", :role => "tablist"}
      .panel.panel-default.no_overflow
        #cityOne.panel-heading{:role => "tab"}
          %h4.panel-title
            %a{"aria-controls" => "cityCollapseOne", "aria-expanded" => "true", "data-parent" => "#city_accordion", "data-toggle" => "collapse", :href => "#cityCollapseOne", :role => "button"}
              =t('calendar_actions.form.radio_folding')
        #cityCollapseOne.panel-collapse.collapse{"aria-labelledby" => "cityOne", :role => "tabpanel"}
          .panel-body
            = render partial: "show_action", locals: {actions: @folding_city_action }
      .panel.panel-default.no_overflow
        #cityTwo.panel-heading{:role => "tab"}
          %h4.panel-title
            %a.collapsed{"aria-controls" => "cityCollapseTwo", "aria-expanded" => "false", "data-parent" => "#city_accordion", "data-toggle" => "collapse", :href => "#cityCollapseTwo", :role => "button"}
