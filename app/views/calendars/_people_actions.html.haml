.widget-box.transparent
  .widget-header1
    %h3 Дії громадських активістів
  .widget-main
    #external-events.calendar-event.width-sm

      - @people_actions.each do |calendar_action|
        .external-event.ui-draggable{:style => "background-color: #{calendar_action.color}; position: relative;",
        "data-title" => calendar_action.title.html_safe,
        "data-icon" => calendar_action.icon.html_safe,
        "data-description" => calendar_action.description.html_safe,
        "data-color" => calendar_action.color,
        "data-holder" => calendar_action.holder}

          %h4.title{:style => "background-color: #{calendar_action.color}; position: relative;"}
            = calendar_action.icon.html_safe
            = calendar_action.title.html_safe
          .body
            = calendar_action.description.html_safe
